<h2>Welcome back <%=@user.first%>!</h2>
<br>
<p>Current tickets</p>
<ul>
  <% if @user.tickets.length == 0%>
    <li>No current tickets</li>  
    <%@user.tickets.each do |x|%>
      <li><%=x.short_description%></li>
    <%end%>
  <% end%>
</ul>

<form post="POST"action="/tickets/new">
  <input type="submit" value="Create Ticket">
</form>
